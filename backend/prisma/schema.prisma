generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum UserType {
  GUEST
  AUTHENTICATED
}

enum Function {
  TRANSLATE
  BACKGROUNDREMOVE
  VOICECHAT
}

model GuestSession {
  id         Int      @id @default(autoincrement())
  ipAddress  String   @map("ip_address")
  userAgent  String   @map("user_agent")
  sessionId  String   @unique @map("session_id")
  usageCount Int?     @default(5) @map("usage_count")
  userType   UserType @default(GUEST)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([ipAddress, sessionId])
  @@map("guest_session")
}

model User {
  id             Int                @id @default(autoincrement())
  email          String             @unique
  name           String?
  googleId       String             @unique @map("google_id")
  profilePicture String?            @map("profile_picture")
  features       UserFeatureUsage[]
  userType       UserType           @default(AUTHENTICATED)
  createdAt      DateTime           @default(now()) @map("created_at")
  updatedAt      DateTime           @updatedAt @map("updated_at")

  @@index([email, googleId])
  @@map("users")
}

model UserFeatureUsage {
  id        Int      @id @default(autoincrement())
  userId    Int
  feature   Function
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  useage    Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([feature, userId])
  @@index([userId])
  @@map("features")
}

model LanguageList {
  id            Int      @id @default(autoincrement())
  language      String   @unique
  language_code String   @unique
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([language_code, language])
  @@map("language_lists")
}
