generator client {
        provider = "prisma-client"
        output   = "../generated/prisma"
}

datasource db {
        provider = "postgresql"
}

model User {
        id            Int            @id @default(autoincrement())
        email         String         @unique
        username      String
        firstName     String         @map("first_name")
        lastName      String         @map("last_name")
        avatarUrl     String         @map("avatar_url")
        emailVerified Boolean        @map("email_verified")
        password      String
        isActive      Boolean        @map("is_active")
        createdAt     DateTime       @default(now()) @map("created_at")
        updatedAt     DateTime       @updatedAt @map("updated_at")
        lastLogin     DateTime       @default(now())
        oauthAccounts OauthAccount[]
        refreshTokens RefreshToken[]

        @@map("users")
}

enum Provider {
        GOOGLE
        GITHUB
        FACEBOOK
        MICROSOFT
}

model OauthAccount {
        id                     Int      @id @default(autoincrement())
        userId                 Int      @map("user_id")
        user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
        provider               Provider
        providerUserId         String   @unique @map("provider_user_id")
        providerAccessToken    String   @unique @map("provider_access_token")
        providerRefreshToken   String   @unique @map("provider_refresh_token")
        providerTokenExpiresAt DateTime @map("provider_token_expires_at")
        providerData           Json     @map("provider_data")
        createdAt              DateTime @default(now()) @map("created_at")
        updatedAt              DateTime @updatedAt @map("updated_at")

        @@map("oauth_accounts")
}

model RefreshToken {
        id         Int      @id @default(autoincrement())
        userId     Int      @map("user_id")
        user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
        tokenHash  String   @map("token_hash")
        ipAddress  String   @map("ip_address")
        createdAt  DateTime @default(now()) @map("created_at")
        updatedAt  DateTime @updatedAt @map("updated_at")
        expiresAt  DateTime @map("expires_at")
        lastUsedAt DateTime @map("last_used_at")
        isRevoked  DateTime @map("is_revoked")

        @@map("refresh_tokens")
}
